@model List<UserVM>
<link rel="stylesheet" href="~/css/mang.css" />

<div class="main_page col-12">
    <div class="main_content col-10">
        <div class="upper_content col-12">
            <h3 class="h_upper">Manage user</h3>
        </div>
        <div class="lower_content col-12">
            <table id="example" class="display" style="width:100%">
                <thead class="t_head">
                    <tr>
                        <th style="width:20%;">Name</th>
                        <th style="text-align:left;width:20%;">Username</th>
                        <th style="text-align:left;width:20%;">Email</th>
                        <th style="text-align:left;width:20%;">Role</th>
                        <th class="t_act" style="width:20%;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td style="text-align:left;">@item.UserName</td>
                            <td style="text-align:left;">@item.Email</td>
                            <td style="text-align:left;">@item.Role</td>
                            <td style="text-align:right;padding-top:0.6rem;padding-bottom:0.6rem;">
                                @if (item.LockEnd == null)
                                {
                                    <a asp-action="Lock" asp-route-id="@item.Id" class="a_edit"><i class="fa-solid fa-lock"></i> Lock</a>
                                }
                                else
                                {
                                    <a asp-action="UnLock" asp-route-id="@item.Id" class="a_unlock"><i class="fa-solid fa-lock-open"></i> Unlock</a>
                                }
                                <a asp-action="Manage" asp-route-id="@item.Id" class="a_manage"><i class="fa-solid fa-pen-to-square"></i> Manage</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        new DataTable('#example');
    </script>
}

<style>
    .container {
        align-items: center;
        margin-top: 50px;
    }

    .mybox {
        box-shadow: 10px 0px 20px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

        .mybox a {
            color: black;
            text-decoration: none;
        }

    .back {
        width: 80%;
        margin: auto;
        margin-top: 30px;
    }

    body {
        overflow: hidden
    }

</style>

<div class="back ">
    <a asp-area="Customer" asp-controller="Home" class="btn btn-dark"><i class="fa-solid fa-arrow-left"></i>  Home</a>

</div>

<div class="row">
    <div class="container col-lg-8 ">
        @foreach (var item in Model)
        {
            <div class="alert alert-light mybox" role="alert">

                <a asp-area="Customer" asp-controller="mycategory" asp-action="CategoryContain" asp-route-id="@item.Id" class="a_category"> @item.Name</a>
            </div>
        }

    </div>

</div>